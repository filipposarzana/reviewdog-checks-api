{
  "private": true,
  "name": "reviewdog-checks-api",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "description": "Using reviewdog with ESLint/TSLint in monorepo",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "stylelint": "^10.1.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "lint:bar:eslint": "eslint ./packages/bar/**/*.js",
    "lint:bar:tslint": "tslint ./packages/bar/**/*.ts",
    "lint:bar:typecheck": "tsc -p ./packages/bar/tsconfig.json",
    "lint:baz:eslint": "eslint ./packages/baz/**/*.js",
    "lint:baz:tslint": "tslint ./packages/baz/**/*.ts",
    "lint:baz:typecheck": "tsc -p ./packages/baz/tsconfig.json",
    "lint:foo:eslint": "eslint ./packages/foo/**/*.js",
    "lint:foo:tslint": "tslint ./packages/foo/**/*.ts",
    "lint:foo:typecheck": "tsc -p ./packages/foo/tsconfig.json",
    "lint:stocazzo:style": "stylelint ./packages/stocazzo/**/*.scss --config=\"./packages/stocazzo/stylelintrc.yml\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipposarzana/reviewdog-checks-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/filipposarzana/reviewdog-checks-api/issues"
  },
  "homepage": "https://github.com/filipposarzana/reviewdog-checks-api#readme"
}
